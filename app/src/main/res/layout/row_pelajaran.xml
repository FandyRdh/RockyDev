<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20px"
    app:cardBackgroundColor="#A098F2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:background="#A098F2"
        android:orientation="horizontal"
        android:padding="20px">

        <ImageView
            android:id="@+id/img_bhs"
            android:layout_width="300px"
            android:layout_height="300px"
            android:src="@drawable/logo_pm1_v4" />

        <LinearLayout
            android:layout_width="720px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_judul"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="7px"
                android:layout_marginTop="15px"
                android:fontFamily="@font/quicksand_medium"
                android:text="TextView"
                android:textAlignment="gravity"
                android:textColor="#0f1112"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/txt_deskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7px"
                android:layout_marginTop="10px"
                android:text="TextView"
                android:textSize="45px"
                android:visibility="invisible" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/bt_beli"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_marginTop="105px"
            android:layout_marginRight="40px"
            app:srcCompat="@drawable/btn_pilih_sub" />


    </LinearLayout>
</androidx.cardview.widget.CardView>